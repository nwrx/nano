{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "daemon": false,
  "envMode": "strict",
  "cacheDir": ".turbo/cache",
  "remoteCache": {
    "enabled": true,
    "preflight": true
  },
  "globalDependencies": [
    ".env",
    "tsconfig.json"
  ],
  "tasks": {
    "@nwrx/nano#build": {
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "@nwrx/nano-api#build": {
      "outputs": ["dist/**"],
      "dependsOn": ["@nwrx/nano#build"],
      "outputLogs": "new-only"
    },
    "@nwrx/nano-app#build": {
      "outputs": [".output/**"],
      "outputLogs": "new-only"
    },
    "@nwrx/nano-runner#build": {
      "outputs": [".output/**"],
      "outputLogs": "new-only"
    },

    "@nwrx/nano-runner#start": {
      "outputs": ["dist/**"],
      "dependsOn": ["@nwrx/nano-runner#build"]
    },
    "@nwrx/nano-api#start": {
      "dependsOn": ["@nwrx/nano-api#build"],
      "outputs": ["dist/**"]
    },
    "@nwrx/nano-app#start": {
      "dependsOn": ["@nwrx/nano-app#build"],
      "persistent": true
    },

    "dev": {
      "outputs": [".nuxt/**", ".output/**", "dist/**"],
      "persistent": true
    }
  }
}
