{
  "name": "@nwrx/monorepo",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.13.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow",
        "@typescript-eslint/parser"
      ]
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.5.0",
    "@microsoft/api-extractor": "7.48.1",
    "@rollup/plugin-url": "8.0.2",
    "@swc/core": "1.10.1",
    "@types/node": "22.10.2",
    "@types/nodemailer": "6.4.17",
    "@unshared/eslint-config": "0.3.3",
    "@unshared/scripts": "0.3.3",
    "@unshared/validation": "0.3.3",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "2.1.8",
    "@vitest/utils": "2.1.8",
    "commitlint": "19.6.1",
    "eslint": "9.17.0",
    "happy-dom": "15.11.7",
    "husky": "9.1.7",
    "memfs": "4.15.0",
    "rollup": "4.28.1",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.1.1",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "turbo": "2.3.3",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  },
  "tsup": {
    "entry": [
      "index.ts",
      "*/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "clean": true,
    "splitting": true,
    "sourcemap": true,
    "treeshaking": true,
    "experimental-dts": true
  }
}
