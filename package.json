{
  "name": "@nwrx/monorepo",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow"
      ]
    }
  },
  "scripts": {
    "dev": "uncli build --watch true core module-core",
    "dev:app": "pnpm --filter @nwrx/app dev",
    "build": "uncli build",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit",
    "publish:ci": "uncli publish",
    "release": "uncli release",
    "preinstall": "node ./forcePnpm.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.5.0",
    "@types/node": "22.5.5",
    "@types/nodemailer": "6.4.15",
    "@unshared/eslint-config": "0.0.19",
    "@unshared/scripts": "0.0.19",
    "@vitest/coverage-v8": "2.1.1",
    "@vitest/ui": "2.1.1",
    "@vitest/utils": "2.1.1",
    "commitlint": "19.5.0",
    "eslint": "9.10.0",
    "happy-dom": "15.7.4",
    "husky": "9.1.6",
    "memfs": "4.11.1",
    "tsx": "4.19.1",
    "typescript": "5.6.2",
    "vitest": "2.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-pnpm-scopes"
    ],
    "rules": {
      "body-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
