{
  "name": "@nwrx/monorepo",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow"
      ]
    },
    "patchedDependencies": {
      "@unserved/client": "patches/@unserved__client.patch",
      "@unshared/validation": "patches/@unshared__validation.patch"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit",
    "preinstall": "node ./forcePnpm.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.5.0",
    "@rollup/plugin-url": "8.0.2",
    "@types/node": "22.7.5",
    "@types/nodemailer": "6.4.16",
    "@unshared/eslint-config": "0.0.20",
    "@unshared/scripts": "0.0.20",
    "@unshared/validation": "0.0.20",
    "@vitest/coverage-v8": "2.1.2",
    "@vitest/ui": "2.1.2",
    "@vitest/utils": "2.1.2",
    "commitlint": "19.5.0",
    "eslint": "9.12.0",
    "happy-dom": "15.7.4",
    "husky": "9.1.6",
    "memfs": "4.13.0",
    "rollup": "4.24.0",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.1.1",
    "tsx": "4.19.1",
    "turbo": "2.1.3",
    "typescript": "5.6.3",
    "unplugin-raw": "0.2.2",
    "vitest": "2.1.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-pnpm-scopes"
    ],
    "rules": {
      "body-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
