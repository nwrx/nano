{
  "name": "@nwrx/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow",
        "@typescript-eslint/parser"
      ]
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "cpu-features",
      "esbuild",
      "isolated-vm",
      "msw",
      "sharp",
      "sqlite3",
      "ssh2"
    ]
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' turbo watch dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' turbo run build",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' turbo run start",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.8.0",
    "@microsoft/api-extractor": "7.52.1",
    "@rollup/plugin-url": "8.0.2",
    "@swc/core": "1.11.11",
    "@types/node": "22.13.10",
    "@types/nodemailer": "6.4.17",
    "@unshared/eslint-config": "0.7.0",
    "@unshared/functions": "0.7.0",
    "@unshared/scripts": "0.7.0",
    "@unshared/validation": "0.7.0",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/ui": "3.0.9",
    "@vitest/utils": "3.0.9",
    "commitlint": "19.8.0",
    "eslint": "9.22.0",
    "happy-dom": "17.4.4",
    "husky": "9.1.7",
    "memfs": "4.17.0",
    "rollup": "4.36.0",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.2.1",
    "tsup": "8.5.0",
    "tsx": "4.19.3",
    "turbo": "2.4.4",
    "typescript": "5.8.2",
    "vitest": "3.0.9",
    "yaml": "2.7.0",
    "yaml-js": "0.3.1"
  }
}
