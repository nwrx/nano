{
  "name": "@nwrx/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow",
        "@typescript-eslint/parser"
      ]
    }
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' turbo watch dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' turbo run build",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' turbo run start",
    "lint": "DEBUG=eslint:eslint eslint --cache",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "DEBUG=eslint:eslint eslint --fix --cache",
    "test": "vitest --watch",
    "test:ci": "vitest --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "uncli commit",
    "commit:lint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "19.5.0",
    "@microsoft/api-extractor": "7.49.2",
    "@rollup/plugin-url": "8.0.2",
    "@swc/core": "1.10.12",
    "@types/node": "22.12.0",
    "@types/nodemailer": "6.4.17",
    "@unshared/eslint-config": "0.4.1",
    "@unshared/scripts": "0.4.1",
    "@unshared/validation": "0.4.1",
    "@vitest/coverage-v8": "3.0.4",
    "@vitest/ui": "3.0.4",
    "@vitest/utils": "3.0.4",
    "commitlint": "19.6.1",
    "eslint": "9.19.0",
    "happy-dom": "16.8.1",
    "husky": "9.1.7",
    "memfs": "4.17.0",
    "rollup": "4.32.1",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.1.1",
    "tsup": "8.3.6",
    "tsx": "4.19.2",
    "turbo": "2.3.4",
    "typescript": "5.7.3",
    "vitest": "3.0.4"
  }
}
